@require "shared/-css"

body

  & > header
    padding 3rem
    background -color-main
    border none
    color white
    padding-top 8rem
    padding-bottom 6rem

    display flex
    justify-content center

    h1
      width 100%
      max-width 96rem
      font-family "Patua One", cursive

  & >  main

    & > section
      padding 8rem 0
      color white
      padding 3rem
      background -color-light

      display flex
      justify-content center

      p
        max-width 96rem
        margin 0
        font-family "Titillium Web"
        rhythm 8rem, .6

    article
      font-family "Titillium Web"
      rhythm 6rem, .6

      display flex
      justify-content center

      section
        overflow-x scroll
        padding 3rem
        width 100%
        max-width 96rem

      a[href="#broken"]
        background-color red
        color black

      h1, h2, h3, h4, h5, h6

        font-family "Titillium Web"

        a
          color -color-dark
          text-decoration none

          &::before
            content "Â¶ "

      blockquote
        h1, h2, h3, h4, h5, h6
          font-family "Titillium Web"
          a::before
            content: ""

        &.signature
          font-family "Titillium Web", sans-serif

      section

        pre
          //- prism overrides line-height
          line-height 4rem !important
          font-size 3rem
          margin-bottom 4rem !important
