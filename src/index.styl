@require "shared/-css"

body

  & > header
    padding 8rem
    background -color-main
    border none
    color white
    h1
      font-family "Patua One", cursive

      header
        //- TODO: replace with Blog header once
        //- we have the top blog nav set up.
        display none

  & >  main
    article
      max-width 65ch
      padding 4rem
      font-family "Lora", "Georgia", serif
      rhythm 4rem, .6

      h1, & > section > h1
        font-family "Titillium Web"
        margin-top 8rem
        padding-bottom 4rem
        border-bottom 1px solid silver
        rhythm 6rem, .9

      section
        
        pre
          //- prism trunmps line-height
          font-size 2rem
          margin-bottom 4rem !important

        table, th, td
          border solid 1px black
          padding 1rem
