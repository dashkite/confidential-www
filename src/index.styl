@import url("https://fonts.googleapis.com/css?family=Titillium+Web:400,400i,700,700i")
@import url('https://fonts.googleapis.com/css?family=Patua+One');
@import url('https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i');

@require -layout
@require -theme
@require -bottom-nav

responsive-padding(-padding)
  display grid
  grid-template-columns minmax(3rem, 1fr) minmax(auto,96rem) minmax(3rem, 1fr)

  & > *
    grid-column 2


header
  colors white panda-blue
  responsive-padding 3rem

  h1
    type title
    padding 3rem 0


.promo
  responsive-padding 3rem
  colors white panda-light-blue
  margin-bottom 6rem

  p
    type heading medium
    padding 6rem 0

    & > *
      display inline

article
  responsive-padding 3rem
  typography standard

  & > pre
    //- prism overrides line-height
    line-height 3rem !important
    font-size 2.4rem
    margin-bottom 4rem !important

  h1, h2, h3, h4, h5, h6
    a
      &::before
        content "Â¶ "
      &[href="#broken"]
        color red

  li
    display list-item
    list-style disc outside
    margin-left 1em



