@require "-styles"
// @require "-bottom-nav"

html, body
  reset block

html
  font-size (6 + 2/3)px

header
  nav
    margin-top 2rem
    padding-bottom 2rem
    border-bottom 1px solid silver
    margin-bottom 2rem

    site-toc, site-breadcrumbs
      column nowrap
      align-items center
      type body small
      margin-bottom 1rem

  & > .banner
    colors white darkest-kite-blue

    & > a
      row nowrap
      justify-content center
      padding 3rem

      & > h1
        reset block
        flex 1 1 36rem
        max-width 96rem
        type banner large

body
  display grid
  grid-template-rows auto 1fr auto
  height 100vh
  type body
  colors darkest-kite-gray white

main
  overflow-y hidden
  column nowrap

  & > .page
    display none
    &.active
      flex 1
      column nowrap

    & > .view
      display none
      &.active
        flex 1
        column nowrap

        & > *
          flex 1 1 auto
          column nowrap
          align-items center
          margin-bottom 4rem

        & > .tagline
          flex auto
          row nowrap
          justify-content center
          colors white kite-blue
          padding 4rem

          & > p
            reset block
            flex 1 1 36rem
            max-width 96rem
            type banner medium



footer
  borders top

  nav
    // we know the width here is the minimum device width
    // because we never want the top menu to wrap
    flex 1 0 48rem
    // for now ... possible place where a media query might
    // work, we can move this after .status for wider screens
    order 1
    row nowrap
    justify-content center
    colors white darkest-kite-blue

    & > a
      // width needs to be evenly divisible into 48rem
      // otherwise we'll have little wasted margins
      // so either 8 or 12 rem ... 12 for now until
      // we add two more buttons
      width 12rem
      height 10rem
      padding 1rem
      colors white darkest-kite-blue
      type label small
      text-align center
      column nowrap
      justify-content space-evenly
      text-decoration none

      &:not(:last-child)
        borders right

      & > svg
        fill @color
        overflow visible
        height 2rem
