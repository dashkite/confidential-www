include ../../-mixins

style
  include:stylus index.styl

section
  if data.variables.length > 0

    table
      thead
        tr
          th name
          th type
          th description

      tbody
        each entry in data.variables
          tr
            td: +wikitext(entry.name)(data-path = parent)
            td: +wikitext(entry.type)(data-path = parent)
            td: +wikitext(entry.description)(data-path = parent)

  else
    slot
