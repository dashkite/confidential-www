@require "-styles"
// @require "-bottom-nav"

html, body
  reset block

html
  font-size (6 + 2/3)px

body
  display grid
  grid-template-rows auto 1fr auto
  height 100vh
  type body
  colors darkest-kite-gray white

header
  row nowrap middle
  margin-top 1rem
  padding 1rem
  padding-left 2rem
  padding-bottom 3rem
  borders bottom

  & > a
    & > h1
      reset block
      type heading
      colors darker-kite-blue white
      margin-right 2rem

  & > raven-messages
    flex 1

main

  overflow-y scroll
  background white

  & > .page
    flex 1

    & > .view
      &:not(.active)
        display none

      row wrap
      justify-content center

      // TODO is there a better way to do this?
      & > raven-banner
        width 100%
        margin-bottom 2rem

      & > raven-article
      & > raven-register
      & > raven-login
      & > raven-team
      & > raven-profile
        padding 3rem



footer
  borders top

  nav
    // we know the width here is the minimum device width
    // because we never want the top menu to wrap
    flex 1 0 48rem
    // for now ... possible place where a media query might
    // work, we can move this after .status for wider screens
    order 1
    row nowrap
    justify-content center
    colors white darkest-kite-blue

    & > a
      // width needs to be evenly divisible into 48rem
      // otherwise we'll have little wasted margins
      // so either 8 or 12 rem ... 12 for now until
      // we add two more buttons
      width 12rem
      height 10rem
      padding 1rem
      colors white darkest-kite-blue
      type label small
      text-align center
      column nowrap
      justify-content space-evenly
      text-decoration none

      &:not(:last-child)
        borders right

      & > svg
        fill @color
        overflow visible
        height 2rem
